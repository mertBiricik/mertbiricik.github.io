<section class="section" id="featured-projects">
  <div class="section-container">
    <h2 class="section-title">Featured Projects</h2>
    <div class="projects-grid">
      {%- for project in projects.featured | reverse -%}
      <div class="project-card">
        <div class="project-header">
          <h3 class="project-title">{{ project.title }}</h3>
          {% if project.subtitle %}
          <p class="project-subtitle">{{ project.subtitle }}</p>
          {% endif %}
        </div>
        <div class="project-content">
          <div class="project-description">
            <p><strong>Problem:</strong> {{ project.problem }}</p>
            <p><strong>Solution:</strong> {{ project.solution }}</p>
            <p><strong>Outcome:</strong> {{ project.outcome }}</p>
          </div>
          {% if project.tech and project.tech.length > 0 %}
          <div class="project-tech">
            {%- for tag in project.tech -%}
              <span class="tech-tag">{{ tag }}</span>
            {%- endfor -%}
          </div>
          {% endif %}
          <div class="project-links">
            {% if project.sourceLink %}
              <a href="{{ project.sourceLink }}" class="btn btn-outline btn-sm" target="_blank" rel="noopener noreferrer"><i class="fab fa-github"></i> View Code</a>
            {% endif %}
            {% if project.visitSiteLink %}
              <a href="{{ project.visitSiteLink }}" class="btn btn-primary btn-sm" target="_blank" rel="noopener noreferrer">
                <i class="fas fa-external-link-alt"></i> Visit Site
              </a>
            {% endif %}
            {% if project.id == 'enerdata' %}
              <a href="/demos/enerdata-primary-energy/" class="btn btn-primary btn-sm">
                <i class="fas fa-chart-bar"></i> View Demo
              </a>
            {% endif %}
          </div>
        </div>
      </div>
      {%- endfor -%}
    </div>
    <div class="text-center mt-4">
      <a href="/projects/" class="btn btn-primary">
        <i class="fas fa-folder-open"></i>
        View All Projects
      </a>
    </div>
  </div>
</section>

